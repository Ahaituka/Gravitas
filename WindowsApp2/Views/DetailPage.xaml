<Page x:Class="WindowsApp2.Views.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WindowsApp2"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      x:Name="PageRoot"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
     
      NavigationCacheMode="Enabled"
     
      mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <!--  Don't realize our content by default. See PageRoot_Loaded.  -->
    <StackPanel x:Name="RootPanel" x:DeferLoadStrategy="Lazy">
        <TextBlock Margin="8,0"
                   HorizontalAlignment="Left"
                   Style="{ThemeResource TitleTextBlockStyle}"
                   Text="{x:Bind Item.name, Mode=OneWay}" />

        <TextBlock x:Name="Rootname"
                   MaxWidth="560"
                   Margin="12,8"
                   HorizontalAlignment="Left"
                   EntranceNavigationTransitionInfo.IsTargetElement="True"
                   Style="{ThemeResource BodyTextBlockStyle}"
                   Text="{x:Bind Item.description, Mode=OneWay}" />
    </StackPanel>
</Page>
