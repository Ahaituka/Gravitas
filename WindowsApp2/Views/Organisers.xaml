<Page x:Class="WindowsApp2.Views.Organisers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WindowsApp2.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <WebView x:Name="WebView"
                 LoadCompleted="WebView_LoadCompleted"                
                 Source="http://info.vit.ac.in/gravitas2015/tg15/index.html" />
        <ProgressRing x:Name="ProgressRing"
                      Width="100"
                      Height="100"
                      Foreground="BlueViolet"
                      IsActive="True" />
        <TextBlock x:Name="MyTextBox"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   Foreground="Black"
                   TextWrapping="WrapWholeWords"
                   Visibility="Collapsed">
            Houston! We Got a problem .No Internet Connection!
        </TextBlock>
    </Grid>
</Page>
