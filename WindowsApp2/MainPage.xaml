<Page x:Class="AppStartupGuide.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:AppStartupGuide"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:controls="using:Template10.Controls">
    <Grid x:Name="LayoutRoot">
        <Grid>         

                <MediaElement x:Name="asd"
                              IsLooping="True"
                              IsMuted="True"
                              RelativePanel.Below="asb"
                              Source="SampleData/DesignDataSource/DesignDataSource_Files/Gravitas.MP4"
                              Stretch="UniformToFill">
                    <MediaElement.Clip>
                        <RectangleGeometry x:Name="Geometry1" />
                    </MediaElement.Clip>
                </MediaElement>      
              
                
            <Image Source="SampleData/DesignDataSource/DesignDataSource_Files/Week1.png" Stretch="UniformToFill">
                <Image.Clip>
                    <RectangleGeometry x:Name="Geometry2" />
                </Image.Clip>
            </Image>
            <Image Source="SampleData/DesignDataSource/DesignDataSource_Files/Week2.JPG" Stretch="UniformToFill">
                <Image.Clip>
                    <RectangleGeometry x:Name="Geometry3" />
                </Image.Clip>
            </Image>
            <Image Source="SampleData/DesignDataSource/DesignDataSource_Files/Week3.png" Stretch="Uniform">
                <Image.Clip>
                    <RectangleGeometry x:Name="Geometry4" />
                </Image.Clip>
            </Image>
        </Grid>
        <ScrollViewer x:Name="ScrollingHost">
            <StackPanel>
                
                <Grid Height="{x:Bind PageHeight, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="Section1"
                          Grid.Row="1"
                          Background="White">
                        
                
                        
                        <StackPanel Margin="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock MaxWidth="360"
                                       FontSize="16"
                                       Foreground="Black"
                                       TextWrapping="WrapWholeWords">
                                <Run FontWeight="ExtraBold" Text="ABOUT GRAVITAS" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="graVITas 2015 is an amalgam of technology and ingenuity where both of them come together with creativity. The theme for this year's graVITas is :" />
                                <LineBreak />
                                <LineBreak />
                                <Run FontSize="15"
                                     FontWeight="Bold"
                                     Text="         Engineering for Changing Life " />
                                <LineBreak />

                            </TextBlock>
                            <!--<SymbolIcon Symbol="Comment" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,12" />-->
                        </StackPanel>
                    </Grid>
                </Grid>


                <Grid Height="{x:Bind PageHeight, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="Section2"
                          Grid.Row="1"
                          Background="#FFDDBB0C">


                      
                        <StackPanel Margin="40" HorizontalAlignment="Center">
                            <SymbolIcon Margin="0,0,0,12"
                                        HorizontalAlignment="Left"
                                        Foreground="White"
                                        Symbol="World" />
                            <TextBlock MaxWidth="360"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       TextWrapping="WrapWholeWords">
                                <Run Text=" We are the Enginner " />
                                <LineBreak />
                                <Run Text=" We are the Future of Enginneering " />

                                <LineBreak />
                                <Run Text=" We are the Enginner" />

                                <LineBreak />
                                <Run Text=" We  are Accountable" />
                                <LineBreak />

                                <Run Text=" We are Global Citizens" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Height="{x:Bind PageHeight, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="Section3"
                          Grid.Row="1"
                          Background="#FF2CCD71">
                        <StackPanel Margin="40" HorizontalAlignment="Center">
                            <SymbolIcon Margin="0,0,0,12"
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        Symbol="World" />
                            <TextBlock MaxWidth="360"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       TextWrapping="WrapWholeWords">
                                <Run Text=" We are Mobilizing A Community" />
                                <LineBreak />
                                <Run Text=" Our Community will drive a change  " />

                                <LineBreak />
                                <Run Text=" Information is Power,And" />

                                <LineBreak />
                                <Run Text=" We are Here To Empower" />
                                <LineBreak />

                                <Run Text="People First,Technology Follows" />
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Height="{x:Bind PageHeight, Mode=OneWay}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid x:Name="Section4"
                          Grid.Row="1"
                          Background="#FF1A80F0">

                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />



                        </Grid.ColumnDefinitions>



                        <HyperlinkButton Grid.Column="0"
                                         Margin="0"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         NavigateUri="https://www.facebook.com/graVITasVITU">
                            <Ellipse x:Name="fb"
                                     Width="150"
                                     Height="150"
                                     Margin="0,15,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Stroke="White">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/fb.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </HyperlinkButton>

                        <HyperlinkButton Grid.Column="1"
                                         Margin="0"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         NavigateUri="https://www.instagram.com/vitgravitas">
                            <Ellipse x:Name="insta"
                                     Width="150"
                                     Height="150"
                                     Margin="0,15,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/instagram.jpg" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </HyperlinkButton>

                        <HyperlinkButton Grid.Column="2"
                                         Margin="0"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         NavigateUri="https://www.twitter.com/gravitas_vit">
                            <Ellipse x:Name="twitter"
                                     Width="150"
                                     Height="150"
                                     Margin="0,15,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/twiiter.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </HyperlinkButton>

                        <HyperlinkButton Grid.Column="3"
                                         Margin="0"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         NavigateUri="http://www.bing.com">
                            <Ellipse x:Name="call"
                                     Width="150"
                                     Height="150"
                                     Margin="0,15,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/email.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </HyperlinkButton>


                        <!--<SymbolIcon Margin="0,0,0,12"
                                        HorizontalAlignment="Left"
                                        Foreground="Black"
                                        Symbol="Comment" />
                            <TextBlock MaxWidth="360"
                                       FontSize="16"
                                       Foreground="Black"
                                       TextWrapping="WrapWholeWords"
                                       HorizontalAlignment="Center">


                                    <Run Text="Join Us"  FontWeight="ExtraBold"/>
                                <LineBreak></LineBreak>
                                    <Run Text="We are enginnering for change" />
                                <LineBreak></LineBreak>
                                    <Run Text="By Engineers For Everyone" />
                                <LineBreak></LineBreak>
                            </TextBlock>-->

                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Grid IsHitTestVisible="False">
            <StackPanel x:Name="Section1Header"
                        Margin="0,80,0,0"
                        VerticalAlignment="Top"
                        d:LayoutOverrides="VerticalAlignment">
                <StackPanel>
                    <StackPanel.RenderTransform>
                        <CompositeTransform x:Name="Section1HeaderTransform" />
                    </StackPanel.RenderTransform>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="Black"
                               d:LayoutOverrides="LeftMargin, RightMargin, LeftPosition, RightPosition">
                        <Run FontSize="32" Text="graVITas '16" />
                        <!--<Run Text="2016" FontSize="64" FontWeight="ExtraLight" />-->
                    </TextBlock>
                    <!--<SymbolIcon Symbol="RepeatOne" Foreground="White" d:LayoutOverrides="TopMargin, BottomMargin" />-->
                </StackPanel>
                <TextBlock Margin="64,24,64,0"
                           CacheMode="BitmapCache"
                           FontSize="18.667"
                           FontStyle="Italic"
                           Foreground="White"
                           Text=""
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords">
                    <TextBlock.RenderTransform>
                        <CompositeTransform x:Name="Section1HeaderContentTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>


            <StackPanel x:Name="Section2Header"
                        Margin="0,80,0,0"
                        VerticalAlignment="Top"
                        Opacity="0"
                        d:LayoutOverrides="VerticalAlignment">
                <StackPanel>
                    <StackPanel.RenderTransform>
                        <CompositeTransform x:Name="Section2HeaderTransform" />
                    </StackPanel.RenderTransform>
                    <TextBlock HorizontalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="#FFDDBB0C"
                               d:LayoutOverrides="LeftMargin, RightMargin, LeftPosition, RightPosition">
                        <Run FontSize="32" Text="STATISTICS" />
                        <!--<Run Text="1" FontSize="64" FontWeight="ExtraLight" />-->
                    </TextBlock>
                    <SymbolIcon Foreground="#FFDDBB0C"
                                Symbol="Send"
                                d:LayoutOverrides="TopMargin, BottomMargin" />
                </StackPanel>
                <TextBlock Margin="64,24,64,0"
                           FontSize="18.667"
                           FontStyle="Italic"
                           Foreground="#FFDDBB0C"
                           Text=""
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords">
                    <TextBlock.RenderTransform>
                        <CompositeTransform x:Name="Section2HeaderContentTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>
            <StackPanel x:Name="Section3Header"
                        Margin="0,80,0,0"
                        VerticalAlignment="Top"
                        Opacity="0"
                        d:LayoutOverrides="VerticalAlignment">
                <StackPanel>
                    <StackPanel.RenderTransform>
                        <CompositeTransform x:Name="Section3HeaderTransform" />
                    </StackPanel.RenderTransform>
                    <TextBlock HorizontalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="#FF2CCD71"
                               d:LayoutOverrides="LeftMargin, RightMargin, LeftPosition, RightPosition">
                        <Run FontSize="32" Text="OUR MANIFESTO" />
                        <Run FontSize="64"
                             FontWeight="SemiBold"
                             Text="" />
                    </TextBlock>
                    <SymbolIcon Foreground="#FF2CCD71"
                                Symbol="Page"
                                d:LayoutOverrides="TopMargin, BottomMargin" />
                </StackPanel>
                <TextBlock Margin="64,24,64,0"
                           FontSize="18.667"
                           FontStyle="Italic"
                           Foreground="#FF2CCD71"
                           Text=""
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords">
                    <TextBlock.RenderTransform>
                        <CompositeTransform x:Name="Section3HeaderContentTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>
            <StackPanel x:Name="Section4Header"
                        Margin="0,80,0,0"
                        VerticalAlignment="Top"
                        Opacity="0"
                        d:LayoutOverrides="VerticalAlignment">
                <StackPanel>
                    <StackPanel.RenderTransform>
                        <CompositeTransform x:Name="Section4HeaderTransform" />
                    </StackPanel.RenderTransform>
                    <TextBlock HorizontalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="White"
                               d:LayoutOverrides="LeftMargin, RightMargin, LeftPosition, RightPosition">
                        <Run FontSize="32" Text="JOIN US" />
                        <Run FontSize="64"
                             FontWeight="ExtraLight"
                             Text="" />
                    </TextBlock>
                    <SymbolIcon Foreground="White"
                                Symbol="Like"
                                d:LayoutOverrides="TopMargin, BottomMargin" />
                </StackPanel>
                <TextBlock Margin="64,24,64,0"
                           FontSize="18.667"
                           FontStyle="Italic"
                           Foreground="White"
                           Text=""
                           TextAlignment="Center"
                           TextWrapping="WrapWholeWords">
                    <TextBlock.RenderTransform>
                        <CompositeTransform x:Name="Section4HeaderContentTransform" />
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>

        </Grid>
    </Grid>


    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
            <VisualState x:Name="VisualStateNarrow">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!--  TODO: change properties for narrow view  -->
                    <!--<Setter Target="stateTextBox.Text" Value="Narrow Visual State" />-->

                    <Setter Target="fb.Height" Value="15" />
                    <Setter Target="fb.Width" Value="15" />
                    <Setter Target="insta.Height" Value="15" />
                    <Setter Target="insta.Width" Value="15" />
                    <Setter Target="twitter.Height" Value="15" />
                    <Setter Target="twitter.Width" Value="15" />
                    <Setter Target="call.Height" Value="15" />
                    <Setter Target="call.Width" Value="15" />
                </VisualState.Setters>
            </VisualState>
            <VisualState x:Name="VisualStateNormal">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!--  TODO: change properties for normal view  -->
                    <!--<Setter Target="stateTextBox.Text" Value="Normal Visual State" />-->
                </VisualState.Setters>
            </VisualState>
            <VisualState x:Name="VisualStateWide">
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <!--  TODO: change properties for wide view  -->
                    <!--<Setter Target="stateTextBox.Text" Value="Wide Visual State" />-->

                    <Setter Target="fb.Height" Value="Wide Visual State" />
                    <Setter Target="fb.Width" Value="Wide Visual State" />
                    <Setter Target="insta.Height" Value="Wide Visual State" />
                    <Setter Target="insta.Width" Value="Wide Visual State" />
                    <Setter Target="twitter.Height" Value="Wide Visual State" />
                    <Setter Target="twitter.Width" Value="Wide Visual State" />
                    <Setter Target="call.Height" Value="Wide Visual State" />
                    <Setter Target="call.Width" Value="Wide Visual State" />

                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</Page>
